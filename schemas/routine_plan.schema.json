{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RoutinePlan",
  "type": "object",
  "required": [
    "title",
    "items"
  ],
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 80
    },
    "items": {
      "type": "array",
      "minItems": 2,
      "maxItems": 12,
      "items": {
        "type": "object",
        "required": [
          "label"
        ],
        "properties": {
          "label": {
            "type": "string",
            "maxLength": 40
          },
          "duration_min": {
            "type": "integer",
            "minimum": 0,
            "maximum": 240
          },
          "notes": {
            "type": "string",
            "maxLength": 120
          }
        },
        "additionalProperties": false
      }
    },
    "printable": {
      "type": "boolean",
      "default": true
    }
  },
  "additionalProperties": false
}
