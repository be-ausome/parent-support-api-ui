{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SupportPlan",
  "type": "object",
  "required": [
    "situation",
    "goals",
    "steps",
    "notes"
  ],
  "properties": {
    "situation": {
      "type": "string",
      "maxLength": 500
    },
    "goals": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 140
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 200
      }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string",
        "maxLength": 200
      }
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tone": {
      "type": "string",
      "enum": [
        "calm",
        "encouraging",
        "matter_of_fact"
      ]
    }
  },
  "additionalProperties": false
}
